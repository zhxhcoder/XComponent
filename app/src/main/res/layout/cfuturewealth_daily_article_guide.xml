<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_daily_article_guide_title"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:drawableRight="@drawable/tactics_more_right"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="每日研读"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_daily_article_guide_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_daily_article_guide_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_daily_article_guide_title"
            tools:text="共111人已读过" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cbase_shadow_bg"
            app:layout_constraintTop_toBottomOf="@+id/tv_daily_article_guide_title">

            <TextView
                android:id="@+id/tv_daily_article_card_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:text="财经早报财经早报\n财经早报"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_daily_article_card_right"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/tactics_more_left"
                app:layout_constraintBottom_toBottomOf="@+id/tv_daily_article_card_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_daily_article_card_title" />


            <TextView
                android:id="@+id/tv_daily_article_card_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="余3篇"
                android:textColor="@color/gray"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/tv_daily_article_card_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_daily_article_card_title" />

            <TextView
                android:id="@+id/tv_daily_article_card_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="已坚持研读2天"
                android:textColor="@color/C17"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_daily_article_card_num"
                app:layout_constraintLeft_toRightOf="@+id/tv_daily_article_card_num"
                app:layout_constraintTop_toTopOf="@+id/tv_daily_article_card_num" />

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>


</LinearLayout>